<div class="text-center">
  <h1>La Ligue 1 Conforama</h1>
  <%= link_to "Retour au calendrier", root_path %>
</div>
  <div class="row mt-4">
    <div class="col-12 text-center">
      <% @matches["matches"].each do |element| %>
      <div class="my-5 card">
        <p class="mt-3"><strong><%= element["utcDate"].to_date.strftime("%a. %d.%m.%y") %> </strong></p>
          <p>
            <%= element["homeTeam"]["name"] %> <%= element["score"]["fullTime"]["homeTeam"] %> - <%= element["score"]["fullTime"]["awayTeam"] %> <%= element["awayTeam"]["name"] %></p>        </div>
      <% end %>
    </div>
  </div>
