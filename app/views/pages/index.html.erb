<div class="text-center">
  <h1>La Ligue 1 Conforama</h1>
  <%= link_to "Retour au calendrier", root_path %>
</div>
<div class="table-responsive">
  <table class="table table-hover mt-4">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Domicile</th>
        <th scope="col">Score</th>
        <th scope="col">Exterieur</th>
      </tr>
    </thead>
    <tbody>
    <% @matches["matches"].each do |element| %>
      <tr>
        <th scope="row"><%= element["utcDate"].to_date.strftime("%a. %d.%m.%y") %></th>
        <td><%= element["homeTeam"]["name"] %></td>
        <td><%= element["score"]["fullTime"]["homeTeam"] %> - <%= element["score"]["fullTime"]["awayTeam"] %></td>
        <td><%= element["awayTeam"]["name"] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
